<UserControl x:Class="TiendaGlobosLaFiesta.VentasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" MinHeight="650" MinWidth="1000">

    <UserControl.Resources>
        <!-- Estilo para centrar contenido en celdas -->
        <Style x:Key="CenteredCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para centrar encabezados -->
        <Style x:Key="CenteredHeader" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Botones de cantidad -->
        <Style x:Key="CantidadButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="🎉 Módulo de Ventas 🎉" FontSize="32" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"/>

        <!-- Pestañas -->
        <TabControl Grid.Row="1" FontSize="14">

            <!-- Registrar Venta -->
            <TabItem Header="Registrar Venta">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Selección de Cliente -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="Cliente:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                        <ComboBox x:Name="cmbClientes" Width="250" DisplayMemberPath="Nombre"/>
                    </StackPanel>

                    <!-- Productos y Globos -->
                    <TabControl Grid.Row="1" Margin="0,0,0,15" FontSize="14">

                        <!-- Productos -->
                        <TabItem Header="Productos 🎁">
                            <DataGrid x:Name="dgProductos" AutoGenerateColumns="False" CanUserAddRows="False"
                                      MinHeight="350" RowHeight="40" IsReadOnly="True"
                                      ColumnHeaderStyle="{StaticResource CenteredHeader}"
                                      SelectionMode="Single" SelectionUnit="FullRow"
                                      HorizontalAlignment="Stretch" ColumnWidth="*">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ProductoId}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="120" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}" Width="100" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTemplateColumn Header="Cantidad" Width="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Content="-" Style="{StaticResource CantidadButton}" Click="BtnDisminuirCantidad_Click" Tag="{Binding}" Background="#F44336" Margin="0,0,5,0"/>
                                                    <Border CornerRadius="5" Background="LightYellow" Width="60" Height="40">
                                                        <TextBox Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}" 
                                                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                                 BorderThickness="0" Background="Transparent" IsReadOnly="True"/>
                                                    </Border>
                                                    <Button Content="+" Style="{StaticResource CantidadButton}" Click="BtnAumentarCantidad_Click" Tag="{Binding}" Background="#4CAF50" Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Importe 💰" Binding="{Binding Importe, StringFormat=C}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                        <!-- Globos -->
                        <TabItem Header="Globos 🎈">
                            <DataGrid x:Name="dgGlobos" AutoGenerateColumns="False" CanUserAddRows="False"
                                      MinHeight="350" RowHeight="40" IsReadOnly="True"
                                      ColumnHeaderStyle="{StaticResource CenteredHeader}"
                                      SelectionMode="Single" SelectionUnit="FullRow"
                                      HorizontalAlignment="Stretch" ColumnWidth="*">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding GloboId}" Width="*" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Material 🎈" Binding="{Binding Material}" Width="*" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Color 🎨" Binding="{Binding Color}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Tamaño 📏" Binding="{Binding Tamano}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Forma 🔷" Binding="{Binding Forma}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Temática 🎉" Binding="{Binding Tematica}" Width="120" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="Auto"/>
                                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTemplateColumn Header="Cantidad" Width="140">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Content="-" Style="{StaticResource CantidadButton}" Click="BtnDisminuirCantidad_Click" Tag="{Binding}" Background="#F44336" Margin="0,0,5,0"/>
                                                    <Border CornerRadius="5" Background="LightYellow" Width="60" Height="40">
                                                        <TextBox Text="{Binding Cantidad, UpdateSourceTrigger=PropertyChanged}" 
                                                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                                                 BorderThickness="0" Background="Transparent" IsReadOnly="True"/>
                                                    </Border>
                                                    <Button Content="+" Style="{StaticResource CantidadButton}" Click="BtnAumentarCantidad_Click" Tag="{Binding}" Background="#4CAF50" Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Costo 💵" Binding="{Binding Costo, StringFormat=C}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                    <DataGridTextColumn Header="Importe 💰" Binding="{Binding Importe, StringFormat=C}" Width="90" ElementStyle="{StaticResource CenteredCell}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>

                    </TabControl>

                    <!-- Resumen -->
                    <Border Grid.Row="2" Background="#F5F5F5" Padding="15" CornerRadius="10" Margin="10,0">
                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Total Productos 🎁:" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtTotalProductos" Text="0" Grid.Column="1" TextAlignment="Center"/>
                            <TextBlock Text="Total Globos 🎈:" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Right" Margin="20,0,10,0"/>
                            <TextBlock x:Name="txtTotalGlobos" Text="0" Grid.Column="3" TextAlignment="Center"/>
                            <TextBlock Text="Importe Total 💰:" FontWeight="Bold" Grid.Column="4" HorizontalAlignment="Right" Margin="20,0,10,0"/>
                            <TextBlock x:Name="txtImporteTotal" Text="0.00" Grid.Column="5" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Botón Registrar -->
                    <Button Content="🛒 Registrar Venta" Grid.Row="3" Height="50" Width="220"
                            HorizontalAlignment="Center" Margin="0,15,0,0"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            FontSize="16" Click="BtnRegistrarVenta_Click"/>
                </Grid>
            </TabItem>

            <!-- Historial de Ventas -->
            <TabItem Header="Historial de Ventas 📜">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filtros -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Cliente:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,5,0"/>
                        <ComboBox x:Name="cmbFiltroCliente" DisplayMemberPath="Nombre" Grid.Column="1"/>
                        <TextBlock Text="Fecha desde:" VerticalAlignment="Center" Grid.Column="2" Margin="10,0,5,0"/>
                        <DatePicker x:Name="dpFechaDesde" Grid.Column="3"/>
                        <TextBlock Text="hasta:" VerticalAlignment="Center" Grid.Column="4" Margin="10,0,5,0"/>
                        <DatePicker x:Name="dpFechaHasta" Grid.Column="5"/>
                        <Button Content="Filtrar 🔍" Width="100" Grid.Column="6" Click="BtnFiltrarHistorial_Click" Background="#2196F3" Foreground="White"/>
                        <Button Content="Limpiar ✖" Width="100" Grid.Column="7" Click="BtnLimpiarFiltros_Click" Background="#F44336" Foreground="White" Margin="5,0,0,0"/>
                        <Button Content="📊 Excel" Width="100" Grid.Column="8" Background="#4CAF50" Foreground="White" Margin="5,0,0,0" Click="BtnExportarExcel_Click"/>
                        <Button Content="📄 PDF" Width="100" Grid.Column="9" Background="#9C27B0" Foreground="White" Margin="5,0,0,0" Click="BtnExportarPDF_Click"/>
                        <Button Content="📈 Gráfica" Width="100" Grid.Column="10" Background="#FF9800" Foreground="White" Margin="5,0,0,0" Click="BtnMostrarGrafica_Click"/>
                    </Grid>

                    <!-- DataGrid Historial -->
                    <DataGrid x:Name="dgHistorial" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              ColumnHeaderStyle="{StaticResource CenteredHeader}" RowHeight="40" Grid.Row="1"
                              SelectionMode="Single" SelectionUnit="FullRow"
                              HorizontalAlignment="Stretch" ColumnWidth="*">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Venta" Binding="{Binding VentaId}" Width="130" ElementStyle="{StaticResource CenteredCell}"/>
                            <DataGridTextColumn Header="Cliente 🎁" Binding="{Binding ClienteNombre}" Width="*" ElementStyle="{StaticResource CenteredCell}"/>
                            <DataGridTextColumn Header="Empleado 👤" Binding="{Binding Empleado}" Width="290" ElementStyle="{StaticResource CenteredCell}"/>
                            <DataGridTextColumn Header="Fecha 📅" Binding="{Binding FechaVenta, StringFormat=d}" Width="120" ElementStyle="{StaticResource CenteredCell}"/>
                            <DataGridTextColumn Header="Total 💰" Binding="{Binding Total, StringFormat=C}" Width="150" ElementStyle="{StaticResource CenteredCell}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
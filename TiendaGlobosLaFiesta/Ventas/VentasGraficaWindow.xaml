<Window x:Class="TiendaGlobosLaFiesta.VentasGraficaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Gráfica de Ventas"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO CON ICONO NARANJA -->
        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" 
                   Foreground="#ff7f50" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Run Text="📊 "/>
            <Run Text="Ventas por Cliente"/>
        </TextBlock>

        <!-- SEPARADOR CON GRADIENTE NARANJA -->
        <Separator Grid.Row="1" Height="3" Margin="0,0,0,12">
            <Separator.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#ff7f50" Offset="0"/>
                    <GradientStop Color="#ffb347" Offset="1"/>
                </LinearGradientBrush>
            </Separator.Background>
        </Separator>

        <!-- GRÁFICA -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <lvc:CartesianChart Series="{Binding Series}" 
                                XAxes="{Binding XAxes}" 
                                YAxes="{Binding YAxes}" 
                                LegendPosition="Top" 
                                ZoomMode="X"/>
        </ScrollViewer>
    </Grid>
</Window>

<Window x:Class="TiendaGlobosLaFiesta.MenuGerenteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="La Fiesta - Menú Gerente"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" Background="#FFF8F8F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Menú lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Área de contenido -->
        </Grid.ColumnDefinitions>

        <!-- MENÚ LATERAL -->
        <StackPanel Grid.Column="0" Background="#2C3E50">
            <!-- Bienvenida -->
            <TextBlock x:Name="txtBienvenida" 
                       Text="Bienvenido" 
                       Foreground="White" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,20,0,30" 
                       TextWrapping="Wrap" TextAlignment="Center"/>

            <!-- Botones de menú -->
            <Button x:Name="btnVentas" Content="Ventas" Height="50" Margin="10" Click="BtnVentas_Click"/>
            <Button x:Name="btnInventario" Content="Inventario" Height="50" Margin="10" Click="BtnInventario_Click"/>
            <Button x:Name="btnClientes" Content="Clientes" Height="50" Margin="10" Click="BtnClientes_Click"/>
            <Button x:Name="btnPedidos" Content="Pedidos" Height="50" Margin="10" Click="BtnPedidos_Click"/>
            <Button x:Name="btnReportes" Content="Reportes" Height="50" Margin="10" Click="BtnReportes_Click"/>

            <!-- Cerrar sesión -->
            <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" Height="50" Margin="10,50,10,0" 
                    Click="BtnCerrarSesion_Click" Background="#E74C3C" Foreground="White"/>
        </StackPanel>

        <!-- ÁREA DE CONTENIDO -->
        <Grid Grid.Column="1" Margin="10">
            <Image x:Name="imgFondo" Stretch="UniformToFill"/>
            <ContentControl x:Name="MainContent" Margin="0"/>
        </Grid>
    </Grid>
</Window>
<UserControl x:Class="TiendaGlobosLaFiesta.ClientesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5" MinHeight="500" MinWidth="700">

    <UserControl.Resources>
        <!-- Estilo para centrar texto en DataGrid -->
        <Style x:Key="CenteredCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Cabecera del DataGrid -->
        <Style x:Key="CenteredHeader" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Botones modernos -->
        <Style TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6" SnapsToDevicePixels="True"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Módulo de Clientes" FontSize="26" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,15" Foreground="#333"/>

        <!-- Buscar cliente -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Buscar:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>

            <Grid Grid.Column="1">
                <TextBox x:Name="txtBuscarCliente" FontSize="14" VerticalContentAlignment="Center" Padding="5"/>

                <!-- Placeholder funcional -->
                <TextBlock Text="Ingrese nombre o apellido" IsHitTestVisible="False" 
                           Foreground="#9E9E9E" Margin="8,0,0,0" VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=txtBuscarCliente}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=txtBuscarCliente}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=txtBuscarCliente}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Content="Buscar" Grid.Column="2" Width="90" Background="#2196F3"
                    Click="BtnBuscarCliente_Click"/>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="2" CornerRadius="8" Background="White" Padding="2"
                SnapsToDevicePixels="True" Margin="0,0,0,5">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <DataGrid x:Name="dgClientes" AutoGenerateColumns="False" CanUserAddRows="False"
                      RowHeight="35" IsReadOnly="True"
                      ColumnHeaderStyle="{StaticResource CenteredHeader}"
                      SelectionMode="Single" SelectionUnit="FullRow"
                      AlternatingRowBackground="#F9F9F9" GridLinesVisibility="None"
                      HorizontalAlignment="Stretch" ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID Cliente" Binding="{Binding ClienteId}" Width="120"
                                        ElementStyle="{StaticResource CenteredCell}"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"
                                        ElementStyle="{StaticResource CenteredCell}"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding TelefonoTexto}" Width="180"
                                        ElementStyle="{StaticResource CenteredCell}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Agregar" Width="120" Background="#4CAF50" Click="BtnAgregarCliente_Click" Height="40"/>
            <Button Content="Editar" Width="120" Background="#FF9800" Click="BtnEditarCliente_Click" Height="40"/>
            <Button Content="Eliminar" Width="120" Background="#F44336" Click="BtnEliminarCliente_Click"/>
            <Button Content="Actualizar" Width="120" Background="#2196F3" Click="BtnActualizarClientes_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
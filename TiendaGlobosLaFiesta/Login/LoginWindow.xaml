<Window x:Class="TiendaGlobosLaFiesta.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - La Fiesta" Height="450" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="Transparent" ResizeMode="NoResize" 
        WindowStyle="None" AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Border CornerRadius="15" Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="20">
        <Grid>
            <Button Content="✖" Width="35" Height="35"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Background="Transparent" BorderThickness="0"
                    Foreground="Black" FontWeight="Bold" FontSize="16"
                    Click="BtnCerrar_Click" Cursor="Hand"/>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
                <TextBlock Text="La Fiesta" FontSize="30" FontWeight="Bold"
                           Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,25"/>
                <TextBlock Text="Usuario" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="16"/>
                <Border CornerRadius="8" Background="#F5F5F5" BorderBrush="#CCC" BorderThickness="1" Padding="5">
                    <DockPanel>
                        <Image Width="32" Height="32" Margin="0,0,8,0" Source="/Recursos/user32.png"/>
                        <TextBox x:Name="txtUsername" Height="32" FontSize="16"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TxtUsername_KeyDown"
                                 Background="Transparent" BorderThickness="0"/>
                    </DockPanel>
                </Border>

                <TextBlock Text="Contraseña" FontWeight="SemiBold" Margin="0,15,0,5" FontSize="16"/>
                <Border CornerRadius="8" Background="#F5F5F5" BorderBrush="#CCC" BorderThickness="1" Padding="5">
                    <DockPanel>
                        <Image Width="32" Height="32" Margin="0,0,8,0" Source="/Recursos/lock32.png"/>
                        <Grid>
                            <PasswordBox x:Name="txtPassword" Height="32" FontSize="16"
                                         VerticalContentAlignment="Center"
                                         Background="Transparent" BorderThickness="0"
                                         KeyDown="TxtPassword_KeyDown"/>
                            <TextBox x:Name="txtPasswordVisible" Height="32" FontSize="16"
                                     VerticalContentAlignment="Center"
                                     Visibility="Collapsed" Background="Transparent" BorderThickness="0"
                                     KeyDown="TxtPassword_KeyDown"/>
                        </Grid>
                    </DockPanel>
                </Border>

                <CheckBox x:Name="chkShowPassword" Content="Mostrar contraseña" Margin="0,12,0,5"
                          Checked="chkShowPassword_Checked" Unchecked="chkShowPassword_Unchecked"
                          Foreground="#444" FontSize="14"/>
                <CheckBox x:Name="chkRemember" Content="Recordar usuario" Margin="0,0,0,12"
                          Foreground="#444" FontSize="14"/>
                <TextBlock x:Name="txtMensaje" Foreground="Red" FontSize="14" TextAlignment="Center" Margin="0,5,0,0"/>
                <ProgressBar x:Name="progressLogin" Height="5" IsIndeterminate="True" Visibility="Collapsed" Margin="0,5,0,0"/>
                <Button x:Name="btnIngresar" Content="Ingresar" Height="42"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand" Margin="0,10,0,0"
                        Click="BtnLogin_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

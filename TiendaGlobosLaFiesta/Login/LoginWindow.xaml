<Window x:Class="TiendaGlobosLaFiesta.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TiendaGlobosLaFiesta.ViewModels"
        mc:Ignorable="d"
        Title="La Fiesta - Iniciar Sesión" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <Storyboard x:Key="FormFadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.7"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="50,50,50,0" To="50,0" Duration="0:0:0.7">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <SolidColorBrush x:Key="AccentColorBrush" Color="#EC407A"/>

        <ControlTemplate x:Key="InputBoxTemplate" TargetType="{x:Type Control}">
            <Border x:Name="border" Background="#F7F9FC" BorderBrush="#E0E6F1" BorderThickness="1" CornerRadius="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                           Width="24" Height="24" Margin="12,0,0,0" VerticalAlignment="Center" Opacity="0.8"/>

                    <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center"/>

                    <TextBlock Text="{TemplateBinding ToolTip}" Foreground="#8A99B2" FontSize="16" VerticalAlignment="Center" 
                               Margin="12,0,0,0" IsHitTestVisible="False" Grid.Column="1">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                            <Condition Binding="{Binding Password, RelativeSource={RelativeSource TemplatedParent}}" Value=""/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColorBrush}"/>
                    <Setter TargetName="border" Property="Background" Value="White"/>
                    <Setter TargetName="border" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="6" Color="#EC407A" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <Border CornerRadius="15" Background="White">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="30" Color="Black" Opacity="0.1"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="15,0,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#85C1E9" Offset="0.0"/>
                        <GradientStop Color="#5DADE2" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0">
                    <Image Source="/Recursos/Logo_App.png" Stretch="Uniform" Margin="0,0,0,25">
                        <Image.Effect>
                            <DropShadowEffect ShadowDepth="4" BlurRadius="15" Color="Black" Opacity="0.2"/>
                        </Image.Effect>
                    </Image>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1">
                <Button Content="✖" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" BorderThickness="0" Foreground="#AAA" FontWeight="Bold" 
                        FontSize="14" Click="BtnCerrar_Click" Cursor="Hand" Margin="0,15,15,0" ToolTip="Cerrar aplicación"/>

                <StackPanel x:Name="FormPanel" VerticalAlignment="Center" Margin="60,0">
                    <TextBlock Text="Iniciar Sesión" FontSize="34" FontWeight="Bold" Foreground="#333" Margin="0,0,0,40" TextAlignment="Center"/>

                    <TextBox x:Name="txtUsername" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             KeyDown="TxtUsername_KeyDown"
                             Template="{StaticResource InputBoxTemplate}"
                             Tag="/Recursos/user32.png" ToolTip="Nombre de usuario"/>

                    <Grid Margin="0,20,0,0">
                        <PasswordBox x:Name="txtPassword" KeyDown="TxtPassword_KeyDown"
                                     Template="{StaticResource InputBoxTemplate}"
                                     Tag="/Recursos/lock32.png" ToolTip="Contraseña"/>

                        <TextBox x:Name="txtPasswordVisible" KeyDown="TxtPassword_KeyDown"
                                 Template="{StaticResource InputBoxTemplate}"
                                 Tag="/Recursos/lock32.png" ToolTip="Contraseña"
                                 Visibility="Collapsed"/>
                    </Grid>

                    <TextBlock x:Name="avisoCapsLock" Text="⚠️ Bloq Mayús está activado" 
                               Foreground="#D35400" FontWeight="SemiBold" 
                               Margin="5,5,0,0" Visibility="Collapsed"/>

                    <Grid Margin="5,15,5,20">
                        <CheckBox x:Name="chkShowPassword" Content="Mostrar contraseña" VerticalAlignment="Center"
                                  Checked="chkShowPassword_Handler" Unchecked="chkShowPassword_Handler"
                                  Foreground="#666"/>
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Hyperlink Foreground="{StaticResource AccentColorBrush}" Click="RecuperarContrasena_Click" TextDecorations="None">
                                ¿Olvidaste tu contraseña?
                            </Hyperlink>
                        </TextBlock>
                    </Grid>

                    <CheckBox Content="Recordar usuario" IsChecked="{Binding IsRememberMe}" VerticalAlignment="Center" Margin="5,0,0,20"
                              Foreground="#666"/>

                    <TextBlock Text="{Binding Message}" Foreground="Crimson" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10" MinHeight="30"/>

                    <ProgressBar Height="4" IsIndeterminate="True" Margin="0,0,0,10"
                                 Visibility="{Binding IsLoginInProgress, Converter={StaticResource BoolToVis}}"/>

                    <Button x:Name="btnIngresar" Content="Ingresar" Height="50" FontSize="18" FontWeight="Bold" Cursor="Hand" Margin="0,10,0,0"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=txtPassword}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="{StaticResource AccentColorBrush}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#EC407A" Opacity="0.5"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
<Window x:Class="TiendaGlobosLaFiesta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TiendaGlobosLaFiesta"
        Title="La Fiesta - Menú Principal" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#FFF8F8F8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Menú lateral -->
            <ColumnDefinition Width="*"/>
            <!-- Área de contenido -->
        </Grid.ColumnDefinitions>

        <!-- MENÚ LATERAL -->
        <StackPanel Grid.Column="0" Background="#2C3E50">
            <TextBlock Text="La Fiesta" Foreground="White" FontSize="22" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,20,0,20"/>

            <Button x:Name="btnVentas" Content="Ventas" Height="40" Margin="10" Click="BtnVentas_Click"/>
            <Button x:Name="btnInventario" Content="Inventario" Height="40" Margin="10" Click="BtnInventario_Click"/>
            <Button x:Name="btnClientes" Content="Clientes" Height="40" Margin="10" Click="BtnClientes_Click"/>
            <Button x:Name="btnPedidos" Content="Pedidos" Height="40" Margin="10" Click="BtnPedidos_Click"/>
            <Button x:Name="btnReportes" Content="Reportes" Height="40" Margin="10" Click="BtnReportes_Click"/>

            <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" Height="40" Margin="10,50,10,0" Click="BtnCerrarSesion_Click" Background="#E74C3C" Foreground="White"/>
        </StackPanel>

        <!-- ÁREA DE CONTENIDO -->
        <Grid Grid.Column="1">
            <!-- Imagen de fondo predeterminada -->
            <Image x:Name="imgFondo" Stretch="UniformToFill" />

            <!-- ContentControl para los módulos -->
            <ContentControl x:Name="MainContent"/>
        </Grid>
    </Grid>
</Window>

<UserControl x:Class="TiendaGlobosLaFiesta.ClientesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Módulo de Clientes" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <DataGrid x:Name="dgClientes" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                  HeadersVisibility="Column" RowHeight="30" FontSize="14" 
                  SelectionMode="Single" SelectionUnit="FullRow"
                  VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding clienteId}" IsReadOnly="True" Width="120"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding primerNombre}" Width="150"/>
                <DataGridTextColumn Header="Segundo Nombre" Binding="{Binding segundoNombre}" Width="150"/>
                <DataGridTextColumn Header="Apellido Paterno" Binding="{Binding apellidoP}" Width="150"/>
                <DataGridTextColumn Header="Apellido Materno" Binding="{Binding apellidoM}" Width="150"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding telefono}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Agregar Cliente" Width="140" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    Margin="5,0" Click="BtnAgregarCliente_Click"/>
            <Button Content="Guardar Cambios" Width="140" Height="40" Background="#2196F3" Foreground="White" FontWeight="Bold"
                    Margin="5,0" Click="BtnGuardarCambios_Click"/>
            <Button Content="Eliminar Cliente" Width="140" Height="40" Background="#E74C3C" Foreground="White" FontWeight="Bold"
                    Margin="5,0" Click="BtnEliminarCliente_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
<UserControl x:Class="TiendaGlobosLaFiesta.VentasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" MinHeight="500" MinWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Encabezado -->
            <RowDefinition Height="Auto"/>
            <!-- Cliente -->
            <RowDefinition Height="*"/>
            <!-- Productos y Globos -->
            <RowDefinition Height="Auto"/>
            <!-- Resumen -->
            <RowDefinition Height="Auto"/>
            <!-- Botón Registrar -->
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="Registrar Venta" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Selección de cliente -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Cliente:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
            <ComboBox x:Name="cmbClientes" Width="250" DisplayMemberPath="primerNombre"/>
        </StackPanel>

        <!-- Productos y Globos -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Productos -->
            <GroupBox Header="Productos" Margin="5" FontWeight="SemiBold">
                <DataGrid x:Name="dgProductos" AutoGenerateColumns="False" Height="220" CanUserAddRows="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding productoId}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding stock}" IsReadOnly="True" Width="60"/>
                        <!-- Cantidad editable -->
                        <DataGridTemplateColumn Header="Cantidad" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="-" Width="20" Click="BtnDisminuirCantidad_Click" Tag="{Binding}" Margin="0,0,2,0"/>
                                        <TextBox Text="{Binding cantidad, UpdateSourceTrigger=PropertyChanged}" Width="40"
                                                 HorizontalContentAlignment="Center" Background="LightYellow" ToolTip="Ingresa la cantidad"/>
                                        <Button Content="+" Width="20" Click="BtnAumentarCantidad_Click" Tag="{Binding}" Margin="2,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Costo" Binding="{Binding costo}" IsReadOnly="True" Width="60"/>
                        <DataGridTextColumn Header="Importe" Binding="{Binding Importe}" IsReadOnly="True" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Globos -->
            <GroupBox Header="Globos" Margin="5" FontWeight="SemiBold" Grid.Column="1">
                <DataGrid x:Name="dgGlobos" AutoGenerateColumns="False" Height="220" CanUserAddRows="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding globoId}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Material" Binding="{Binding material}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Color" Binding="{Binding color}" IsReadOnly="True" Width="80"/>
                        <!-- Cantidad editable -->
                        <DataGridTemplateColumn Header="Cantidad" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="-" Width="20" Click="BtnDisminuirCantidad_Click" Tag="{Binding}" Margin="0,0,2,0"/>
                                        <TextBox Text="{Binding cantidad, UpdateSourceTrigger=PropertyChanged}" Width="40"
                                                 HorizontalContentAlignment="Center" Background="LightYellow" ToolTip="Ingresa la cantidad"/>
                                        <Button Content="+" Width="20" Click="BtnAumentarCantidad_Click" Tag="{Binding}" Margin="2,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Costo" Binding="{Binding costo}" IsReadOnly="True" Width="60"/>
                        <DataGridTextColumn Header="Importe" Binding="{Binding Importe}" IsReadOnly="True" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- Resumen -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <TextBlock Text="Total Productos:" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock x:Name="txtTotalProductos" Text="0" Width="40"/>
            <TextBlock Text="Total Globos:" FontWeight="Bold" Margin="20,0,10,0"/>
            <TextBlock x:Name="txtTotalGlobos" Text="0" Width="40"/>
            <TextBlock Text="Importe Total:" FontWeight="Bold" Margin="20,0,10,0"/>
            <TextBlock x:Name="txtImporteTotal" Text="0.00" Width="80"/>
        </StackPanel>

        <!-- Botón Registrar -->
        <Button Content="Registrar Venta" Grid.Row="4" Height="42" Width="180"
                HorizontalAlignment="Center" Margin="0,10,0,0"
                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                Click="BtnRegistrarVenta_Click"/>
    </Grid>
</UserControl>
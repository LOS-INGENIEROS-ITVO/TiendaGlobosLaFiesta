<UserControl x:Class="TiendaGlobosLaFiesta.Views.DashboardGerenteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="#F7F8FA">

    <UserControl.Resources>
        <!-- Sombra -->
        <DropShadowEffect x:Key="CardShadow" Color="#888" BlurRadius="8" ShadowDepth="2"/>

        <!-- Animación de aparición (x:Shared="False" para instancias independientes) -->
        <Storyboard x:Key="CardAppearStoryboard" x:Shared="False">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)" From="0.8" To="1" Duration="0:0:0.6"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)" From="0.8" To="1" Duration="0:0:0.6"/>
        </Storyboard>

        <!-- Estilo KPI -->
        <Style TargetType="Border" x:Key="KpiCardStyle">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="140"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#666" BlurRadius="12" ShadowDepth="4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- Título -->
            <TextBlock Text="📊 Dashboard Gerente"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#2E3A59"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <!-- KPIs -->
            <UniformGrid Columns="4" HorizontalAlignment="Center" Margin="0,0,0,24">

                <!-- Ventas Hoy -->
                <Border x:Name="BorderVentasHoy" Style="{StaticResource KpiCardStyle}" Background="#1E88E5">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="💰 Ventas Hoy" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtVentasHoy" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Ventas 7 días -->
                <Border x:Name="BorderVentas7Dias" Style="{StaticResource KpiCardStyle}" Background="#43A047">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="📅 Ventas Últimos 7 días" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtVentas7Dias" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Ventas Mes -->
                <Border x:Name="BorderVentasMes" Style="{StaticResource KpiCardStyle}" Background="#FDD835">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🗓️ Ventas Mes" FontWeight="SemiBold" FontSize="14" Foreground="#212121"/>
                        <TextBlock x:Name="txtVentasMes" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="#212121" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Ticket Promedio -->
                <Border Style="{StaticResource KpiCardStyle}" Background="#8E24AA">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🎟️ Ticket Promedio" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtTicketPromedioHoy" Text="$0.00" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Stock Crítico -->
                <Border Style="{StaticResource KpiCardStyle}" Background="#FB8C00">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="⚠️ Stock Crítico" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtStockCriticoNumero" Text="0 productos" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                        <TextBlock x:Name="txtStockCriticoLista" Text="-" FontSize="12" Foreground="White" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Clientes Frecuentes -->
                <Border Style="{StaticResource KpiCardStyle}" Background="#039BE5">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="👥 Clientes Frecuentes" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtClientesFrecuentesNumero" Text="0 clientes" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                        <TextBlock x:Name="txtClientesFrecuentesNombres" Text="-" FontSize="12" Foreground="White" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Top Cliente -->
                <Border Style="{StaticResource KpiCardStyle}" Background="#7B1FA2">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🏆 Top Cliente" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtTopClienteMesNombre" Text="-" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,6,0,0"/>
                        <TextBlock x:Name="txtTopClienteMesTotal" Text="$0.00" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,4,0,0"/>
                        <TextBlock x:Name="txtTopClienteMesMes" Text="-" FontSize="12" Foreground="White" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Producto más vendido -->
                <Border Style="{StaticResource KpiCardStyle}" Background="#F4511E">
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource CardAppearStoryboard}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="🔥 Producto más vendido" FontWeight="SemiBold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtProductoMasVendidoDia" Text="Hoy: -" FontSize="14" Foreground="White" Margin="0,4,0,0"/>
                        <TextBlock x:Name="txtProductoMasVendidoSemana" Text="Semana: -" FontSize="14" Foreground="White" Margin="0,2,0,0"/>
                        <TextBlock x:Name="txtProductoMasVendidoMes" Text="Mes: -" FontSize="14" Foreground="White" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

            </UniformGrid>

            <!-- 📈 Gráfica -->
            <Border Background="White" CornerRadius="12" Padding="16" Margin="10"
                    BorderBrush="#5E35B1" BorderThickness="2" Effect="{StaticResource CardShadow}"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="📈 Ventas Últimos 7 Días"
                               FontSize="20" FontWeight="Bold"
                               Foreground="#5E35B1"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"
                               Grid.Row="0"/>

                    <lvc:CartesianChart x:Name="cartesianChartVentas"
                                        Grid.Row="1"
                                        LegendLocation="Right"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        MinHeight="400"
                                        Margin="10"/>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
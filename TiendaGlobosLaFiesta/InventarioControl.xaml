<UserControl x:Class="TiendaGlobosLaFiesta.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <TextBlock Text="Módulo de Inventario" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Grids -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Productos -->
            <GroupBox Header="Productos" Margin="5" FontWeight="SemiBold">
                <DataGrid x:Name="dgProductos" AutoGenerateColumns="False" CanUserAddRows="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" RowHeight="28">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding stock}" Value="0">
                                    <Setter Property="Background" Value="#FFB0B0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding stock}" Value="5">
                                    <Setter Property="Background" Value="#FFFACD"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding productoId}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" IsReadOnly="True" Width="*"/>
                        <DataGridTemplateColumn Header="Stock" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding stock, UpdateSourceTrigger=PropertyChanged}" 
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Costo" Binding="{Binding costo}" IsReadOnly="True" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Globos -->
            <GroupBox Header="Globos" Margin="5" FontWeight="SemiBold" Grid.Column="1">
                <DataGrid x:Name="dgGlobos" AutoGenerateColumns="False" CanUserAddRows="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto" RowHeight="28">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding stock}" Value="0">
                                    <Setter Property="Background" Value="#FFB0B0"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding stock}" Value="5">
                                    <Setter Property="Background" Value="#FFFACD"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding globoId}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Material" Binding="{Binding material}" IsReadOnly="True" Width="*"/>
                        <DataGridTextColumn Header="Color" Binding="{Binding color}" IsReadOnly="True" Width="80"/>
                        <DataGridTemplateColumn Header="Stock" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding stock, UpdateSourceTrigger=PropertyChanged}" 
                                             PreviewTextInput="NumberValidationTextBox"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Costo" Binding="{Binding costo}" IsReadOnly="True" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Actualizar Inventario" Width="180" Height="40" Background="#4CAF50" Foreground="White"
                    FontWeight="Bold" Margin="10,0" Click="BtnActualizar_Click"/>
            <Button Content="Cancelar Cambios" Width="180" Height="40" Background="#E74C3C" Foreground="White"
                    FontWeight="Bold" Margin="10,0" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

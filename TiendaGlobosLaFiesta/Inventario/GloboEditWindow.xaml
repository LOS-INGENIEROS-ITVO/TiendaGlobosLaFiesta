<Window x:Class="TiendaGlobosLaFiesta.Views.GloboEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Globo" Height="650" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" ShowInTaskbar="False"
        Background="#F4F7FC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="25">

                <TextBlock Text="Datos Principales" FontSize="16" FontWeight="Bold" Foreground="#007bff" Margin="0,0,0,10"/>
                <Border Background="White" CornerRadius="8" Padding="15" BorderBrush="#DEE2E6" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="ID del Globo:" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtGloboId" Margin="0,5,0,15" IsReadOnly="True" Background="#E9ECEF"/>
                            <TextBlock Text="Color:" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtColor" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Material:" FontWeight="SemiBold"/>
                            <ComboBox x:Name="cmbMaterial" Margin="0,5,0,15">
                                <ComboBoxItem>Latex</ComboBoxItem>
                                <ComboBoxItem>Metalicos</ComboBoxItem>
                                <ComboBoxItem>Burbuja</ComboBoxItem>
                            </ComboBox>
                            <TextBlock Text="Costo:" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtCosto" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Text="Inventario y Unidades" FontSize="16" FontWeight="Bold" Foreground="#007bff" Margin="0,20,0,10"/>
                <Border Background="White" CornerRadius="8" Padding="15" BorderBrush="#DEE2E6" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="Stock:" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtStock" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Unidad de Medida:" FontWeight="SemiBold"/>
                            <TextBox x:Name="txtUnidad" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Text="Características Adicionales" FontSize="16" FontWeight="Bold" Foreground="#007bff" Margin="0,20,0,10"/>
                <TabControl MinHeight="150">
                    <TabItem Header="Tamaños">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="lstTamanos"/>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBox x:Name="txtNuevoTamano" Width="120" Margin="0,5"/>
                                <Button x:Name="btnAgregarTamano" Content="Añadir" Click="Agregar_Click"/>
                                <Button x:Name="btnQuitarTamano" Content="Quitar" Margin="0,5" Click="Quitar_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Formas">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="lstFormas"/>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBox x:Name="txtNuevaForma" Width="120" Margin="0,5"/>
                                <Button x:Name="btnAgregarForma" Content="Añadir" Click="Agregar_Click"/>
                                <Button x:Name="btnQuitarForma" Content="Quitar" Margin="0,5" Click="Quitar_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Temáticas">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="lstTematicas"/>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBox x:Name="txtNuevaTematica" Width="120" Margin="0,5"/>
                                <Button x:Name="btnAgregarTematica" Content="Añadir" Click="Agregar_Click"/>
                                <Button x:Name="btnQuitarTematica" Content="Quitar" Margin="0,5" Click="Quitar_Click"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1" Padding="20" BorderThickness="0,1,0,0" Background="WhiteSmoke">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Guardar" Width="120" Margin="0,0,10,0" IsDefault="True" Click="Guardar_Click" Background="#28a745" Foreground="White" Height="35"/>
                <Button Content="Cancelar" Width="120" IsCancel="True" Height="35"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="TiendaGlobosLaFiesta.Views.GloboEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar/Agregar Globo" Height="605" Width="900"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#FFF8FBFF"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Border CornerRadius="10" BorderBrush="#0078D7" BorderThickness="2" Margin="10" Padding="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- Título -->
                <TextBlock Text="🎈 Agregar/Editar Globo" FontSize="24" FontWeight="Bold"
                           Foreground="#0078D7" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Grid horizontal -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- General -->
                    <GroupBox Header="General" Grid.Column="0" Margin="5">
                        <StackPanel>
                            <TextBlock Text="ID Globo:" FontWeight="Bold"/>
                            <TextBox x:Name="txtGloboId" Height="30" IsReadOnly="True" Margin="0,0,0,10"/>

                            <TextBlock Text="Material:" FontWeight="Bold"/>
                            <ComboBox x:Name="cmbMaterial" Height="30" Margin="0,0,0,10" IsEditable="False"/>

                            <TextBlock Text="Color:" FontWeight="Bold"/>
                            <TextBox x:Name="txtColor" Height="30" Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Características -->
                    <GroupBox Header="Características" Grid.Column="1" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Tamaño(s):" FontWeight="Bold"/>
                            <ListBox x:Name="lstTamano" SelectionMode="Multiple" Height="100" MinWidth="150" Margin="0,0,0,10"/>

                            <TextBlock Text="Forma(s):" FontWeight="Bold"/>
                            <ListBox x:Name="lstForma" SelectionMode="Multiple" Height="100" MinWidth="150" Margin="0,0,0,10"/>

                            <TextBlock Text="Temática(s):" FontWeight="Bold"/>
                            <ListBox x:Name="lstTematica" SelectionMode="Multiple" Height="100" MinWidth="150" Margin="0,0,0,10"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Inventario / Proveedor -->
                    <GroupBox Header="Inventario / Proveedor" Grid.Column="2" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Unidad:" FontWeight="Bold"/>
                            <TextBox x:Name="txtUnidad" Height="30" Margin="0,0,0,10"/>

                            <TextBlock Text="Costo:" FontWeight="Bold"/>
                            <TextBox x:Name="txtCosto" Height="30" Margin="0,0,0,10"/>

                            <TextBlock Text="Stock:" FontWeight="Bold"/>
                            <TextBox x:Name="txtStock" Height="30" Margin="0,0,0,10"/>

                            <TextBlock Text="Proveedor:" FontWeight="Bold"/>
                            <ComboBox x:Name="cmbProveedor" Height="30" Margin="0,0,0,10" IsEditable="False"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="💾 Guardar" Width="140" Height="35" Background="#0078D7" Foreground="White"
                            FontWeight="Bold" Margin="10,0" Click="Guardar_Click"/>
                    <Button Content="💾 Guardar y agregar otro" Width="180" Height="35" Background="#28A745" Foreground="White"
                            FontWeight="Bold" Margin="10,0" Click="GuardarYAgregar_Click"/>
                    <Button Content="❌ Cancelar" Width="140" Height="35" Background="#D9534F" Foreground="White"
                            FontWeight="Bold" Margin="10,0" Click="Cancelar_Click"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>

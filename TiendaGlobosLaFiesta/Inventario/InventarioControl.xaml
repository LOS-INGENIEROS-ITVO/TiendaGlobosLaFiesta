<UserControl x:Class="TiendaGlobosLaFiesta.Views.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TiendaGlobosLaFiesta.ViewModels"
             Height="700" Width="1200">

    <UserControl.Resources>
        <!-- Estilo centrado para celdas -->
        <Style x:Key="CenterTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo para encabezados -->
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#FFDDDDDD"/>
        </Style>

        <!-- Estilo botones CRUD -->
        <Style x:Key="CrudButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Colores de stock mediante DataTrigger -->
        <Style x:Key="StockRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding StockActual}" Value="0">
                    <Setter Property="Background" Value="LightCoral"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding StockActual}" Value="1">
                    <Setter Property="Background" Value="LightGoldenrodYellow"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StockRowStyleProductos" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Stock}" Value="0">
                    <Setter Property="Background" Value="LightCoral"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Stock}" Value="1">
                    <Setter Property="Background" Value="LightGoldenrodYellow"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StockRowStyleGlobos" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Stock}" Value="0">
                    <Setter Property="Background" Value="LightCoral"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Stock}" Value="1">
                    <Setter Property="Background" Value="LightGoldenrodYellow"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="10">

        <TextBlock Text="📊 Módulo Inventario" FontSize="26" FontWeight="Bold"
                   HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,20"/>

        <TabControl>

            <!-- STOCK CRÍTICO -->
            <TabItem Header="⚠️ Stock Crítico">
                <DockPanel LastChildFill="True" Margin="10">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="🔍 Buscar Stock Crítico:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                        <TextBox Width="300" Text="{Binding StockCriticoFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding StockCriticoView}" AutoGenerateColumns="False" CanUserAddRows="False"
                              FontSize="14" HeadersVisibility="All" GridLinesVisibility="All" RowHeight="30"
                              ColumnWidth="*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              RowStyle="{StaticResource StockRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🔹 Emoji" Binding="{Binding Emoji}" ElementStyle="{StaticResource CenterTextStyle}" Width="50" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📌 Tipo" Binding="{Binding Tipo}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📝 Nombre" Binding="{Binding Nombre}" ElementStyle="{StaticResource CenterTextStyle}" Width="*" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Unidad" Binding="{Binding Unidad}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📦 Stock" Binding="{Binding StockActual}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="💰 Costo" Binding="{Binding Precio, StringFormat=C}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🎨 Color" Binding="{Binding Color}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- PRODUCTOS -->
            <TabItem Header="🛍️ Productos">
                <DockPanel LastChildFill="True" Margin="10">
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="🔍 Buscar Producto:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Width="300" Text="{Binding ProductosFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                            <Button Content="➕ Agregar" Click="AgregarProducto_Click" Style="{StaticResource CrudButtonStyle}" Background="#FF2196F3"/>
                            <Button Content="✏️ Editar" Click="EditarProducto_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFFF9800"/>
                            <Button Content="🗑️ Eliminar" Click="EliminarProducto_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFF44336"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="ProductosDataGrid" ItemsSource="{Binding ProductosViewFiltered}" AutoGenerateColumns="False" CanUserAddRows="False"
                              FontSize="14" ColumnWidth="*" HeadersVisibility="All" GridLinesVisibility="All" RowHeight="30"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" SelectionUnit="FullRow"
                              RowStyle="{StaticResource StockRowStyleProductos}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🆔 ID" Binding="{Binding ProductoId}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📝 Nombre" Binding="{Binding Nombre}" ElementStyle="{StaticResource CenterTextStyle}" Width="*" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Unidad" Binding="{Binding Unidad}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📦 Stock" Binding="{Binding Stock}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="💰 Costo" Binding="{Binding Costo, StringFormat=C}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🏭 Proveedor" Binding="{Binding ProveedorId}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- GLOBOS -->
            <TabItem Header="🎈 Globos">
                <DockPanel LastChildFill="True" Margin="10">
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="🔍 Buscar Globo:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Width="300" Text="{Binding GlobosFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                            <Button Content="➕ Agregar" Click="AgregarGlobo_Click" Style="{StaticResource CrudButtonStyle}" Background="#FF2196F3"/>
                            <Button Content="✏️ Editar" Click="EditarGlobo_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFFF9800"/>
                            <Button Content="🗑️ Eliminar" Click="EliminarGlobo_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFF44336"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="GlobosDataGrid" ItemsSource="{Binding GlobosViewFiltered}" AutoGenerateColumns="False" CanUserAddRows="False"
                              FontSize="14" ColumnWidth="*" HeadersVisibility="All" GridLinesVisibility="All" RowHeight="30"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" SelectionUnit="FullRow"
                              RowStyle="{StaticResource StockRowStyleGlobos}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🆔 ID" Binding="{Binding GloboId}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🧵 Material" Binding="{Binding Material}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🎨 Color" Binding="{Binding Color}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Tamaño" Binding="{Binding Tamano}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🔷 Forma" Binding="{Binding Forma}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🌟 Temática" Binding="{Binding Tematica}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Unidad" Binding="{Binding UnidadDisplay}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="💰 Costo" Binding="{Binding Costo, StringFormat=C}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📦 Stock" Binding="{Binding Stock}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🏭 Proveedor" Binding="{Binding ProveedorId}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

        </TabControl>
    </DockPanel>
</UserControl>
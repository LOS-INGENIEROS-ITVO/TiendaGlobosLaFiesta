<UserControl x:Class="TiendaGlobosLaFiesta.Views.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TiendaGlobosLaFiesta.ViewModels"
             xmlns:conv="clr-namespace:TiendaGlobosLaFiesta.Converters"
             Width="800" Height="600">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:LessThanOrEqualTo10Converter x:Key="LessThanOrEqualTo10Converter"/>
        <conv:StockStatusToColorConverter x:Key="StockStatusToColorConverter"/>
        <conv:NullOrEmptyToDashConverter x:Key="NullOrEmptyToDashConverter"/>

        <!-- RowStyle para resaltar stock crítico -->
        <Style x:Key="ProductoRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding Stock, Converter={StaticResource StockStatusToColorConverter}}"/>
        </Style>
        <Style x:Key="GloboRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding Stock, Converter={StaticResource StockStatusToColorConverter}}"/>
        </Style>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:InventarioViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl>
            <!-- Productos Tab -->
            <TabItem Header="Productos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filtro de búsqueda -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Buscar producto:" VerticalAlignment="Center"/>
                        <TextBox Width="200" Margin="5,0,0,0" 
                                 Text="{Binding TextoBusquedaProducto, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- DataGrid Productos -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ProductosView}" 
                              SelectedItem="{Binding ProductoSeleccionado}" 
                              AutoGenerateColumns="False" 
                              RowStyle="{StaticResource ProductoRowStyle}" 
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductoId}"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                            <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Agregar" Width="100" Margin="5"
                                Command="{Binding AgregarProductoCommand}"/>
                        <Button Content="Editar" Width="100" Margin="5"
                                Command="{Binding EditarProductoCommand}"/>
                        <Button Content="Eliminar" Width="100" Margin="5"
                                Command="{Binding EliminarProductoCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Globos Tab -->
            <TabItem Header="Globos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filtro de búsqueda -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Buscar globo:" VerticalAlignment="Center"/>
                        <TextBox Width="200" Margin="5,0,0,0" 
                                 Text="{Binding TextoBusquedaGlobo, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- DataGrid Globos -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding GlobosView}" 
                              SelectedItem="{Binding GloboSeleccionado}" 
                              AutoGenerateColumns="False" 
                              RowStyle="{StaticResource GloboRowStyle}" 
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding GloboId}"/>
                            <DataGridTextColumn Header="Material" Binding="{Binding Material}"/>
                            <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}"/>
                            <DataGridTextColumn Header="Color" Binding="{Binding Color}"/>
                            <DataGridTextColumn Header="Tamaño" Binding="{Binding Tamano, Converter={StaticResource NullOrEmptyToDashConverter}}"/>
                            <DataGridTextColumn Header="Forma" Binding="{Binding Forma, Converter={StaticResource NullOrEmptyToDashConverter}}"/>
                            <DataGridTextColumn Header="Temática" Binding="{Binding Tematica, Converter={StaticResource NullOrEmptyToDashConverter}}"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Botones -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Agregar" Width="100" Margin="5"
                                Command="{Binding AgregarGloboCommand}"/>
                        <Button Content="Editar" Width="100" Margin="5"
                                Command="{Binding EditarGloboCommand}"/>
                        <Button Content="Eliminar" Width="100" Margin="5"
                                Command="{Binding EliminarGloboCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
<UserControl x:Class="TiendaGlobosLaFiesta.Views.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:TiendaGlobosLaFiesta.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#F4F7FC">

    <UserControl.DataContext>
        <vm:InventarioViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="#007bff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="📦 Gestión de Inventario" Grid.Row="0"
                   FontSize="32" FontWeight="Bold" Foreground="#1B2B4E" 
                   Margin="0,0,0,20"/>

        <TabControl Grid.Row="1">

            <TabItem Header="⚠️ Stock Crítico">
                <DataGrid ItemsSource="{Binding StockCritico}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre del Producto" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Stock Actual" Binding="{Binding StockActual}" Width="150"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="🎁 Productos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBox Width="300" Padding="8" Text="{Binding TextoBusquedaProducto, UpdateSourceTrigger=PropertyChanged}" ToolTip="Buscar producto..."/>
                        <Button Content="Agregar Nuevo" Command="{Binding AgregarProductoCommand}" Style="{StaticResource ActionButtonStyle}"/>
                        <Button Content="Editar Seleccionado" Command="{Binding EditarProductoCommand}" Style="{StaticResource ActionButtonStyle}" Background="#ffc107" Foreground="Black"/>
                        <Button Content="Eliminar Seleccionado" Command="{Binding EliminarProductoCommand}" Style="{StaticResource ActionButtonStyle}" Background="#dc3545"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding ProductosView}"
                              SelectedItem="{Binding ProductoSeleccionado, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductoId}" Width="150"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}" Width="120"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="🎈 Globos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBox Width="300" Padding="8" Text="{Binding TextoBusquedaGlobo, UpdateSourceTrigger=PropertyChanged}" ToolTip="Buscar globo..."/>
                        <Button Content="Agregar Nuevo" Command="{Binding AgregarGloboCommand}" Style="{StaticResource ActionButtonStyle}"/>
                        <Button Content="Editar Seleccionado" Command="{Binding EditarGloboCommand}" Style="{StaticResource ActionButtonStyle}" Background="#ffc107" Foreground="Black"/>
                        <Button Content="Eliminar Seleccionado" Command="{Binding EliminarGloboCommand}" Style="{StaticResource ActionButtonStyle}" Background="#dc3545"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding GlobosView}"
                              SelectedItem="{Binding GloboSeleccionado, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding GloboId}" Width="120"/>
                            <DataGridTextColumn Header="Nombre Completo" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Material" Binding="{Binding Material}" Width="120"/>
                            <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="100"/>
                            <DataGridTextColumn Header="Tamaño(s)" Binding="{Binding Tamano}" Width="120"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
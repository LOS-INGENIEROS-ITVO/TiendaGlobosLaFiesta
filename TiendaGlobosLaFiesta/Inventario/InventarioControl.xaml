<UserControl x:Class="TiendaGlobosLaFiesta.Views.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:TiendaGlobosLaFiesta.ViewModels"
             xmlns:conv="clr-namespace:TiendaGlobosLaFiesta.Converters"
             Height="700" Width="1200">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:NullOrEmptyToDashConverter x:Key="NullToDash"/>
        <conv:StockStatusToColorConverter x:Key="StockColor"/>

        <!-- Estilo para centrar texto -->
        <Style x:Key="CenterTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para encabezado DataGrid -->
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1">
            <!-- Stock Crítico -->
            <TabItem Header="Stock Crítico">
                <DockPanel Margin="10">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="🔍 Buscar Stock Crítico:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="200" Text="{Binding StockCriticoFilter, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding StockCriticoView}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Emoji" Binding="{Binding Emoji}" ElementStyle="{StaticResource CenterTextStyle}" Width="50"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding StockActual}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CenterTextStyle}">
                                        <Setter Property="Foreground" Value="{Binding StockActual, Converter={StaticResource StockColor}}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Precio}" ElementStyle="{StaticResource CenterTextStyle}" Width="100"/>
                            <DataGridTextColumn Header="Color" Binding="{Binding Color, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- Productos -->
            <TabItem Header="Productos">
                <DockPanel Margin="10">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="🔍 Buscar Producto:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="200" Text="{Binding ProductosFilter, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Agregar" Click="AgregarProducto_Click" Margin="10,0,0,0"/>
                        <Button Content="Editar" Click="EditarProducto_Click" Margin="5,0,0,0"/>
                        <Button Content="Eliminar" Click="EliminarProducto_Click" Margin="5,0,0,0"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding ProductosViewFiltered}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductoId}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="200"/>
                            <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo}" ElementStyle="{StaticResource CenterTextStyle}" Width="100"/>
                            <DataGridTextColumn Header="Proveedor" Binding="{Binding ProveedorId}" ElementStyle="{StaticResource CenterTextStyle}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- Globos -->
            <TabItem Header="Globos">
                <DockPanel Margin="10">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="🔍 Buscar Globo:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Width="200" Text="{Binding GlobosFilter, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Agregar" Click="AgregarGlobo_Click" Margin="10,0,0,0"/>
                        <Button Content="Editar" Click="EditarGlobo_Click" Margin="5,0,0,0"/>
                        <Button Content="Eliminar" Click="EliminarGlobo_Click" Margin="5,0,0,0"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding GlobosViewFiltered}" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding GloboId}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Material" Binding="{Binding Material}" Width="120"/>
                            <DataGridTextColumn Header="Color" Binding="{Binding Color, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Tamaño" Binding="{Binding Tamano}" ElementStyle="{StaticResource CenterTextStyle}" Width="100"/>
                            <DataGridTextColumn Header="Forma" Binding="{Binding Forma}" ElementStyle="{StaticResource CenterTextStyle}" Width="100"/>
                            <DataGridTextColumn Header="Temática" Binding="{Binding Tematica}" ElementStyle="{StaticResource CenterTextStyle}" Width="120"/>
                            <DataGridTextColumn Header="Unidad" Binding="{Binding UnidadDisplay}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Costo" Binding="{Binding Costo}" ElementStyle="{StaticResource CenterTextStyle}" Width="100"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" ElementStyle="{StaticResource CenterTextStyle}" Width="80"/>
                            <DataGridTextColumn Header="Proveedor" Binding="{Binding ProveedorId}" ElementStyle="{StaticResource CenterTextStyle}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
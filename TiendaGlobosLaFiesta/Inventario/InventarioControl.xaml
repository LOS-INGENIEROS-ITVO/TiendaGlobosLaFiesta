<UserControl x:Class="TiendaGlobosLaFiesta.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#FFF8F8F8" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Inventario de Productos y Globos" 
                   FontSize="26" FontWeight="Bold" Foreground="#333"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Contenedor principal con sombra -->
        <Border Grid.Row="1" CornerRadius="12" Background="White" Padding="15"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="12" ShadowDepth="4"/>
            </Border.Effect>

            <TabControl FontSize="14" FontWeight="SemiBold"
                        VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                <!-- Productos -->
                <TabItem Header="Productos">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="dgProductos" AutoGenerateColumns="False" IsReadOnly="False"
                                  CanUserAddRows="False" RowBackground="#F7F7F7" AlternatingRowBackground="#E8F0FE"
                                  GridLinesVisibility="Horizontal" SelectionMode="Single" HeadersVisibility="Column"
                                  VerticalScrollBarVisibility="Auto" Margin="0" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ProductoId}" IsReadOnly="True" Width="100"/>
                                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="70"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70"/>
                                <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,0">
                            <Button Content="Agregar" Width="110" Height="40" Margin="5"
                                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                    Click="BtnAgregarProducto_Click"/>
                            <Button Content="Modificar" Width="110" Height="40" Margin="5"
                                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                                    Click="BtnModificarProducto_Click"/>
                            <Button Content="Eliminar" Width="110" Height="40" Margin="5"
                                    Background="#F44336" Foreground="White" FontWeight="Bold"
                                    Click="BtnEliminarProducto_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

                <!-- Globos -->
                <TabItem Header="Globos">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <DataGrid x:Name="dgGlobos" AutoGenerateColumns="False" IsReadOnly="False"
                                  CanUserAddRows="False" RowBackground="#FFF8F8F8" AlternatingRowBackground="#FFEFF7"
                                  GridLinesVisibility="Horizontal" SelectionMode="Single" HeadersVisibility="Column"
                                  VerticalScrollBarVisibility="Auto" Margin="0" 
                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding GloboId}" IsReadOnly="True" Width="100"/>
                                <DataGridTextColumn Header="Material" Binding="{Binding Material}" Width="100"/>
                                <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="70"/>
                                <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="100"/>
                                <DataGridTextColumn Header="Tamaños" Binding="{Binding Tamanios}" Width="150"/>
                                <DataGridTextColumn Header="Formas" Binding="{Binding Formas}" Width="150"/>
                                <DataGridTextColumn Header="Temáticas" Binding="{Binding Tematicas}" Width="150"/>
                                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="70"/>
                                <DataGridTextColumn Header="Costo" Binding="{Binding Costo, StringFormat=C}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,0">
                            <Button Content="Agregar" Width="110" Height="40" Margin="5"
                                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                    Click="BtnAgregarGlobo_Click"/>
                            <Button Content="Modificar" Width="110" Height="40" Margin="5"
                                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                                    Click="BtnModificarGlobo_Click"/>
                            <Button Content="Eliminar" Width="110" Height="40" Margin="5"
                                    Background="#F44336" Foreground="White" FontWeight="Bold"
                                    Click="BtnEliminarGlobo_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Resumen -->
        <Border Grid.Row="2" Background="#FFFAF0" Padding="12" Margin="0,10,0,0" CornerRadius="10"
                BorderBrush="#DDD" BorderThickness="1" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="🛒 Total Productos:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTotalProductos" IsReadOnly="True" Width="50" Margin="5,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="🎈 Total Globos:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtTotalGlobos" IsReadOnly="True" Width="50" Margin="5,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Text="💰 Valor Inventario:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtValorInventario" IsReadOnly="True" Width="100" Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

<UserControl x:Class="TiendaGlobosLaFiesta.Views.InventarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:TiendaGlobosLaFiesta.Converters"
             Height="700" Width="1200">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:NullOrEmptyToDashConverter x:Key="NullToDash"/>
        <conv:StockStatusToColorConverter x:Key="StockColor"/>

        <!-- Estilo centrado para celdas -->
        <Style x:Key="CenterTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo para encabezados -->
        <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="BlanchedAlmond"/>
        </Style>

        <!-- Estilo botones CRUD -->
        <Style x:Key="CrudButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <DockPanel Margin="10">
        <TextBlock Text="📊 Módulo de Inventario" FontSize="26" FontWeight="Bold"
                   HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,20"/>

        <TabControl>

            <!-- STOCK CRÍTICO -->
            <TabItem Header="⚠️ Stock Crítico">
                <DockPanel LastChildFill="True" Margin="20">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="🔍 Buscar Stock Crítico:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                        <TextBox Width="300" Text="{Binding StockCriticoFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding StockCriticoView}" AutoGenerateColumns="False" CanUserAddRows="False"
                              FontSize="18" HeadersVisibility="All" GridLinesVisibility="All" RowHeight="30"
                              ColumnWidth="*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StockActual, Converter={StaticResource StockColor}}" Value="Red">
                                        <Setter Property="Background" Value="red"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StockActual, Converter={StaticResource StockColor}}" Value="Orange">
                                        <Setter Property="Background" Value="Orange"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Emoji" Binding="{Binding Emoji}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📌 Tipo" Binding="{Binding Tipo}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📝 Nombre" Binding="{Binding Nombre}" ElementStyle="{StaticResource CenterTextStyle}" Width="*" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Unidad" Binding="{Binding Unidad, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="140" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📦 Stock" Binding="{Binding StockActual}" ElementStyle="{StaticResource CenterTextStyle}" Width="140" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="💰 Costo" Binding="{Binding Precio, StringFormat=C}" ElementStyle="{StaticResource CenterTextStyle}" Width="140" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🎨 Color" Binding="{Binding Color, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="140" HeaderStyle="{StaticResource HeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- PRODUCTOS -->
            <TabItem Header="🛍️ Productos">
                <DockPanel LastChildFill="True" Margin="10">
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="🔍 Buscar Producto:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Width="300" Text="{Binding ProductosFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                            <Button Content="➕ Agregar" Click="AgregarProducto_Click" Style="{StaticResource CrudButtonStyle}" Background="#FF2196F3"/>
                            <Button Content="✏️ Editar" Click="EditarProducto_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFFF9800"/>
                            <Button Content="🗑️ Eliminar" Click="EliminarProducto_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFF44336"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="ProductosDataGrid" ItemsSource="{Binding ProductosViewFiltered}" AutoGenerateColumns="False" CanUserAddRows="False"
                              FontSize="18" ColumnWidth="*" HeadersVisibility="All" GridLinesVisibility="All" RowHeight="30"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" SelectionUnit="FullRow">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Stock, Converter={StaticResource StockColor}}" Value="Red">
                                        <Setter Property="Background" Value="Red"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Stock, Converter={StaticResource StockColor}}" Value="Orange">
                                        <Setter Property="Background" Value="Orange"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🆔 ID" Binding="{Binding ProductoId}" ElementStyle="{StaticResource CenterTextStyle}" Width="150" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📝 Nombre" Binding="{Binding Nombre}" ElementStyle="{StaticResource CenterTextStyle}" Width="*" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Unidad" Binding="{Binding Unidad, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📦 Stock" Binding="{Binding Stock}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="💰 Costo" Binding="{Binding Costo, Converter={StaticResource NullToDash}, StringFormat=C}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🏭 Proveedor" Binding="{Binding ProveedorId}" ElementStyle="{StaticResource CenterTextStyle}" Width="170" HeaderStyle="{StaticResource HeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <!-- GLOBOS -->
            <TabItem Header="🎈 Globos">
                <DockPanel LastChildFill="True" Margin="10">
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="🔍 Buscar Globo:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="16"/>
                            <TextBox Width="300" Text="{Binding GlobosFilter, UpdateSourceTrigger=PropertyChanged}" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                            <Button Content="➕ Agregar" Click="AgregarGlobo_Click" Style="{StaticResource CrudButtonStyle}" Background="#FF2196F3"/>
                            <Button Content="✏️ Editar" Click="EditarGlobo_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFFF9800"/>
                            <Button Content="🗑️ Eliminar" Click="EliminarGlobo_Click" Style="{StaticResource CrudButtonStyle}" Background="#FFF44336"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid x:Name="GlobosDataGrid" ItemsSource="{Binding GlobosViewFiltered}" AutoGenerateColumns="False" CanUserAddRows="False"
                              FontSize="14" ColumnWidth="*" HeadersVisibility="All" GridLinesVisibility="All" RowHeight="30"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionMode="Single" SelectionUnit="FullRow">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="Gray"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Stock, Converter={StaticResource StockColor}}" Value="Red">
                                        <Setter Property="Background" Value="red"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Stock, Converter={StaticResource StockColor}}" Value="Orange">
                                        <Setter Property="Background" Value="Orange"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="🆔 ID" Binding="{Binding GloboId}" ElementStyle="{StaticResource CenterTextStyle}" Width="150" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🧵 Material" Binding="{Binding Material, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🎨 Color" Binding="{Binding Color, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="110" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Tamaño" Binding="{Binding Tamano, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🔷 Forma" Binding="{Binding Forma, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🌟 Temática" Binding="{Binding Tematica, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="120" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📏 Unidad" Binding="{Binding UnidadDisplay, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="*" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="💰 Costo" Binding="{Binding Costo, Converter={StaticResource NullToDash}, StringFormat=C}" ElementStyle="{StaticResource CenterTextStyle}" Width="100" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="📦 Stock" Binding="{Binding Stock}" ElementStyle="{StaticResource CenterTextStyle}" Width="80" HeaderStyle="{StaticResource HeaderStyle}"/>
                            <DataGridTextColumn Header="🏭 Proveedor" Binding="{Binding ProveedorId, Converter={StaticResource NullToDash}}" ElementStyle="{StaticResource CenterTextStyle}" Width="170" HeaderStyle="{StaticResource HeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

        </TabControl>
    </DockPanel>
</UserControl>
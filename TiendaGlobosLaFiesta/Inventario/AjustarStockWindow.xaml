<Window x:Class="TiendaGlobosLaFiesta.Views.AjustarStockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajustar Stock" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock x:Name="lblProducto" Text="Ajustando Stock para: " FontWeight="Bold" Margin="0,0,0,15"/>
        <TextBlock Text="Nueva Cantidad de Stock:" FontWeight="SemiBold"/>
        <TextBox x:Name="txtNuevaCantidad" Margin="0,5,0,15"/>
        <TextBlock Text="Motivo del Ajuste:" FontWeight="SemiBold"/>
        <ComboBox x:Name="cmbMotivo" Margin="0,5,0,25">
            <ComboBoxItem>Recuento de inventario</ComboBoxItem>
            <ComboBoxItem>Mercancía dañada</ComboBoxItem>
            <ComboBoxItem>Devolución de proveedor</ComboBoxItem>
            <ComboBoxItem>Otro</ComboBoxItem>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirmar Ajuste" Width="140" Click="Confirmar_Click"/>
            <Button Content="Cancelar" Width="100" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
<Window x:Class="TiendaGlobosLaFiesta.Views.ProductoEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Producto" Height="500" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="ToolWindow" ShowInTaskbar="False"
        Background="#F4F7FC">
    <StackPanel Margin="25">
        <TextBlock Text="ID del Producto:" FontWeight="SemiBold"/>
        <TextBox Text="{Binding ProductoId}" Margin="0,5,0,15" IsReadOnly="True" Background="#E9ECEF"/>

        <TextBlock Text="Nombre del Producto:" FontWeight="SemiBold"/>
        <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Costo:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Costo, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Stock:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Stock, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>
            </StackPanel>
        </Grid>

        <TextBlock Text="Unidad (por pieza):" FontWeight="SemiBold"/>
        <TextBox Text="{Binding Unidad, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Guardar" Width="120" IsDefault="True" Click="Guardar_Click" Background="#28a745" Foreground="White" Height="35"/>
            <Button Content="Cancelar" Width="120" IsCancel="True" Margin="10,0,0,0" Height="35"/>
        </StackPanel>
    </StackPanel>
</Window>
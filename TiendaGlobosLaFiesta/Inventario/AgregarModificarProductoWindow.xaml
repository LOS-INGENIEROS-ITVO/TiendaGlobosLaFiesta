<Window x:Class="TiendaGlobosLaFiesta.AgregarModificarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar / Modificar Producto"
        Width="518" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F4F9">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20" MinHeight="360">
            <!-- Contenedor principal con sombra -->
            <Border Background="White" CornerRadius="12" Padding="20"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="12" ShadowDepth="4"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Datos del Producto" FontSize="20" FontWeight="Bold" 
                               Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Nombre -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Nombre:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBox x:Name="txtNombre" Width="300" Background="#ffffff" Padding="5"
                                 KeyDown="TxtNombre_KeyDown"/>
                    </StackPanel>

                    <!-- Unidad -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Unidad:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBox x:Name="txtUnidad" Width="300" Background="#ffffff" Padding="5"
                                 KeyDown="TxtUnidad_KeyDown"/>
                    </StackPanel>

                    <!-- Stock -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Stock:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBox x:Name="txtStock" Width="300" Background="#ffffff" Padding="5"
                                 KeyDown="TxtStock_KeyDown"/>
                    </StackPanel>

                    <!-- Costo -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Costo:" Width="100" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#333"/>
                        <TextBox x:Name="txtCosto" Width="300" Background="#ffffff" Padding="5"
                                 KeyDown="TxtCosto_KeyDown"/>
                    </StackPanel>

                    <!-- Botones -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Guardar" Width="120" Height="40" Margin="10"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="BtnGuardar_Click"/>
                        <Button Content="Cancelar" Width="120" Height="40" Margin="10"
                                Background="#F44336" Foreground="White" FontWeight="Bold"
                                Click="BtnCancelar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
